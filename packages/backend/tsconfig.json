{
  "include": [
    "lib/**/*",
    "src/**/*",
    "types.d.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,

    "noEmit": true,
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["./*"]
    }
  }
}
