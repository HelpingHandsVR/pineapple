{
  "extends": "../../tsconfig.json",
  "include": [
    "lib/**/*",
    "src/**/*",
    "types.d.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["./*"]
    }
  }
}
