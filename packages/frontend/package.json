{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn concurrently 'env-cmd nuxt-ts --dotenv .env' 'yarn gen:watch'",
    "gen:watch": "graphql-codegen --config codegen.yml -w",
    "gen": "graphql-codegen --config codegen.yml",
    "build": "nuxt-ts --dotenv .production.env build",
    "prebuild": "yarn gen",
    "start": "nuxt-ts --dotenv .production.env start",
    "generate": "nuxt-ts --dotenv .production.env generate",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint": "yarn lint:js"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.10.3",
    "@casl/vue": "^1.1.1",
    "@nuxt/typescript-runtime": "^0.4.10",
    "@nuxtjs/apollo": "^4.0.1-rc.1",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "@nuxtjs/vuetify": "^1.11.2",
    "@vue/apollo-composable": "^4.0.0-alpha.8",
    "@vue/composition-api": "^0.6.5",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-link": "^1.2.14",
    "apollo-link-batch-http": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "core-js": "2",
    "email-validator": "^2.0.4",
    "graphql-tag": "^2.10.3",
    "js-cookie": "^2.2.1",
    "luxon": "^1.24.1",
    "nuxt": "^2.13.0",
    "vuex-persistedstate": "^3.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.4",
    "@graphql-codegen/fragment-matcher": "1.15.4",
    "@graphql-codegen/introspection": "1.15.4",
    "@graphql-codegen/typescript": "^1.15.4",
    "@graphql-codegen/typescript-operations": "1.15.4",
    "@graphql-codegen/typescript-vue-apollo": "^1.15.4",
    "@nuxt/typescript-build": "^1.0.3",
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@types/js-cookie": "^2.2.6",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pug": "^3.0.0",
    "pug-plain-loader": "^1.0.0"
  }
}
