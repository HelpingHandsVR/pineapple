# This file is the topmost EditorConfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Trailing whitespace has meaning in Markdown
[*.{md}]
trim_trailing_whitespace = false

# Windows scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf

# Linux scripts
[*.sh]
end_of_line = lf
